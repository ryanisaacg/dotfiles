# This is Git's per-user configuration file.
[user]
	name = Ryan
	email = ryanisaacg@users.noreply.github.com
[alias]
    pl=pull --ff-only --prune
    pu=push
    ac=!git active
    st=status
    hs=!git history
    cm=commit --verbose
    ca=commit --verbose --all
    co=checkout
    rbi=rebase -i
    rba=rebase --abort
    rbc=rebase --continue
    pr=!gh pr create

    co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
    ff=merge --ff-only
    history=log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    staged = diff --cached
    tags = tag -l
    active= branch -l
    branches = branch -a
    remotes = remote -v
    stashes = stash list
    detach = checkout --detach
[core]
	excludesfile = ~/.config/dotfiles/workshop/.gitignore_global
	autocrlf = input
	eol = lf
    pager = delta
[merge]
	defaultToUpstream = true
    conflictstyle = diff3
[credential]
	helper = store
[pull]
    rebase = false

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
    syntax-theme = gruvbox-dark

[diff]
    colorMoved = default
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
