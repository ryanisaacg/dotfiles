# This is Git's per-user configuration file.
[user]
	name = Ryan Goldstein
	email = ryan@ryanisaacg.com
[alias]
    pl=pull --ff-only --prune
    pu=push
    ac=!git active
    st=status
    sl=!git smartlog
    hs=!git history
    cm=commit --verbose
    ca=commit --verbose --all
    co=checkout

    co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
    ff=merge --ff-only
    amend=commit --amend --verbose --all
    smartlog=!fish -c git_smartlog
    history=log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    staged = diff --cached
    tags = tag -l
    active= branch -l
    branches = branch -a
    remotes = remote -v
    stashes = stash list
[core]
	excludesfile = ~/.config/dotfiles/workshop/.gitignore_global
	autocrlf = input
	eol = lf
[merge]
	defaultToUpstream = true
[credential]
	helper = store
[pull]
	rebase = false
